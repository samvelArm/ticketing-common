{
  "compilerOptions": {
    /* Language and Environment */
    "rootDir": "./src",
    "outDir": "./build",
    "declaration": true,
    "target": "es2016",
    /* Modules */
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
